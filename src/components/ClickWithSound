import React from 'react';
import { Howl, Howler } from 'howler'; // Import howler library for audio playback

const ClickWithSound = () => {
  // Create a new Howl instance with the path to your audio file
  const sound = new Howl({
    src: ['path/to/soundfile.mp3'], // Update this with your audio file path
    volume: 0.5, // Adjust the volume (0.0 to 1.0)
  });

  // Function to handle click event and play the sound
  const handleClick = () => {
    sound.play();
  };

  return (
    <div>
      <h1>Click with Sound</h1>
      <button onClick={handleClick}>Click Me!</button>
    </div>
  );
};

export default ClickWithSound;